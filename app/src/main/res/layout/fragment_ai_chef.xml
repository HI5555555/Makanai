<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    tools:context=".AiChefFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/profile_gradient_background"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/input_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chef"
                        app:tint="#FF6347"
                        android:background="@drawable/category_tag_background"
                        android:backgroundTint="#FFF0F0"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AIシェフ"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="冷蔵庫にある食材を入力してください。\nAIがあなただけのレシピを提案します！"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="24dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="例: 卵, 玉ねぎ, 鶏肉"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#FF6347"
                    app:boxBackgroundColor="#FAFAFA">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ingredients_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:gravity="top"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_generate_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:text="レシピを生成する"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#FF6347"
                    app:elevation="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/input_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="#FF6347"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AIが美味しいレシピを考案中..."
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/input_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提案レシピ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF6347"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/ai_recipe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recipe Title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="材料"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="24dp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/ai_recipe_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="..."
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="作り方"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="24dp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/ai_recipe_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp"
                        android:text="..."
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/result_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/ai_recipe_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_ai_panel"
                        android:padding="16dp"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_sparkles"
                                app:tint="#8BC34A"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="AI栄養分析 (1人分)"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:layout_marginTop="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FFF3E0" android:orientation="vertical" android:padding="10dp" android:layout_marginEnd="4dp" android:layout_marginBottom="4dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="エネルギー" android:textSize="10sp"/>
                                <TextView android:id="@+id/ai_cal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textStyle="bold" android:textColor="#FF5722" android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#E8F5E9" android:orientation="vertical" android:padding="10dp" android:layout_marginStart="4dp" android:layout_marginBottom="4dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="タンパク質" android:textSize="10sp"/>
                                <TextView android:id="@+id/ai_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textStyle="bold" android:textColor="#4CAF50" android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#E3F2FD" android:orientation="vertical" android:padding="10dp" android:layout_marginEnd="4dp" android:layout_marginTop="4dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="脂質" android:textSize="10sp"/>
                                <TextView android:id="@+id/ai_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textStyle="bold" android:textColor="#2196F3" android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FFFDE7" android:orientation="vertical" android:padding="10dp" android:layout_marginStart="4dp" android:layout_marginTop="4dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="炭水化物" android:textSize="10sp"/>
                                <TextView android:id="@+id/ai_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textStyle="bold" android:textColor="#FBC02D" android:textSize="16sp"/>
                            </LinearLayout>
                        </GridLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="12dp">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                                <TextView android:layout_width="80dp" android:layout_height="wrap_content" android:text="食物繊維" android:textSize="11sp"/>
                                <TextView android:id="@+id/ai_fiber_val" android:layout_width="40dp" android:layout_height="wrap_content" android:text="-" android:textSize="11sp"/>
                                <ProgressBar android:id="@+id/ai_fiber_progress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:progressDrawable="@drawable/progress_green" android:max="100"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                                <TextView android:layout_width="80dp" android:layout_height="wrap_content" android:text="ビタミン" android:textSize="11sp"/>
                                <TextView android:id="@+id/ai_vit_val" android:layout_width="40dp" android:layout_height="wrap_content" android:text="-" android:textSize="11sp"/>
                                <ProgressBar android:id="@+id/ai_vit_progress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:progressDrawable="@drawable/progress_green" android:max="100"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                                <TextView android:layout_width="80dp" android:layout_height="wrap_content" android:text="ミネラル" android:textSize="11sp"/>
                                <TextView android:id="@+id/ai_min_val" android:layout_width="40dp" android:layout_height="wrap_content" android:text="-" android:textSize="11sp"/>
                                <ProgressBar android:id="@+id/ai_min_progress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:progressDrawable="@drawable/progress_green" android:max="100"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ai_health_tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Tips..."
                            android:textSize="12sp"
                            android:textColor="#2196F3"/>
                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>