<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.makanai.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.makanai.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.makanai.AddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_add_post" />
    <fragment
        android:id="@+id/aiChefFragment"
        android:name="com.example.makanai.AiChefFragment"
        android:label="AI Chef"
        tools:layout="@layout/fragment_ai_chef" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.makanai.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />


    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.makanai.RecipeDetailFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_detail" >

        <argument
            android:name="recipeId"
            app:argType="integer" />
    </fragment>

</navigation>